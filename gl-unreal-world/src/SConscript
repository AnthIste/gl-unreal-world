Import('env')

env.Append(CXXFLAGS=['-std=c++0x', '-g', '--no-pretty-templates'])

env.Append(CPPPATH=[
    'modules/uwl',
    'modules/ogl'])

env.Program(
    'main',
    Glob('*.cc') +
    Glob('modules/uwl/uwl/*.cc') +
    Glob('modules/uwl/uwlec/*.cc') +
    Glob('modules/uwl/uwlevt/*.cc') +
    Glob('modules/uwl/uwlinf/*.cc') +
    Glob('modules/uwl/uwlman/*.cc') +
    Glob('modules/uwl/uwlsys/*.cc') +
    Glob('modules/uwl/uwlutil/*.cc') +
    Glob('modules/ogl/ogl/*.cc') +
    Glob('modules/ogl/oglres/*.cc') +
    Glob('modules/ogl/oglwin/*.cc'),
    LIBS=['glfw', 'GL', 'GLU', 'X11', 'Xxf86vm', 'Xrandr', 'pthread', 'Xi'])
